<UserControl x:Class="CalendarNote.MyUserControl.DayNote"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CalendarNote.MyUserControl"
             mc:Ignorable="d" 
             TextElement.FontWeight="Regular"
             TextElement.FontSize="13"
             TextOptions.TextFormattingMode="Ideal"
             TextOptions.TextRenderingMode="Auto"
             FontFamily="{DynamicResource MaterialDesignFont}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Margin="1"  >
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid x:Name="khung"  x:FieldModifier="public">
            <TextBlock x:Name="txtDate" 
                   Margin="5"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Top"
                   Text="x"
                   FontSize="15"/>
        </Grid>
            <StackPanel Name ="stDayNote" Grid.Row="2">
        </StackPanel>
    </Grid>
</UserControl>
